menuconfig APPLICATION_COMMON
     bool "Config Common Application Modules"
	 default y

if APPLICATION_COMMON

config ADC_BT6
    bool "Enable BT6 ADC Module"
    depends on ADC_NRFX_SAADC
    depends on ADC_CONFIGURABLE_INPUTS
    default y

config ADC_BT6_LOG_LEVEL
    int "Log level for BT6xx ADC module"
    range 0 4
    default 3

config ADC_BT6_OVERSAMPLING
    int "(2**THIS_VALUE samples to average for each ADC reading"
    range 0 8
    default 4

config ADC_BT6_THERMISTOR_CALIBRATION_SAMPLES
    int "Number of samples to average when calibrating thermistor inputs"
    range 1 128
    default 32

config TEST_MENU
    bool "Enable test menu shell"
    depends on SHELL

config LOG_LEVEL_BLE_TASK
    int "Log level for BLE Msg Task"
    range 0 4
    default 3

config UI_TASK_LOG_LEVEL
    int "Log level for BLE Msg Task"
    range 0 4
    default 3

config CONTROL_TASK_LOG_LEVEL
    int "Log level for Control Task"
    range 0 4
    default 3

config BSP_LOG_LEVEL
    int "Log level for BSP"
    range 0 4
    default 4

config ADVERTISEMENT_DISABLE
    bool "Disable advertisements for easier debug"
    help
        For a peripheral breakpoints can be used if advertisements aren't started.
        This is easier than setting CONFIG_BT=n because msg framework assertions can
        remain on.

config SETTINGS_MOUNT_POINT
    string "The mount point for settings (storage partition in internal flash)"
    default "/lfs"

config MCUMGR_CMD_SENTRIUS_MGMT
    bool "Enable the Sentrius mcumgr interface"
    depends on MCUMGR
    default y

config BATTERY_AGE_TICK_RATE_SECONDS
    int "Update rate for increasing battery age counter"
    range 1 3600
    default 60

config ATTRIBUTES_LOG_LEVEL
    int "Log level for Attributes module"
    range 0 4
    default 3

config ATTRIBUTES_FILE_NAME
    string "File name for attributes"
    default "attr.txt"

endif # APPLICATION_COMMON
