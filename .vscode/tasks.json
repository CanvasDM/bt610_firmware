{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "windows": {
    "options": {
      "shell": {
        "executable": "cmd.exe",
        "args": [
          "/d",
          "/c"
        ]
      }
    }
  },
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "west build -b bt610 -d ${workspaceRoot}/peripheral_IO/build ${workspaceRoot}/peripheral_IO",
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": "absolute"
      }
    },
    {
      "label": "re-build",
      "type": "shell",
      "command": "west build -p -b bt610 -d ${workspaceRoot}/peripheral_IO/build ${workspaceRoot}/peripheral_IO",
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": "absolute"
      }
    },
    {
      "label": "flash",
      "type": "shell",
      "command": "west flash --recover -d ${workspaceRoot}/peripheral_IO/build",
      "problemMatcher": []
    },
    {
      "label": "rebuild app and flash",
      "type": "shell",
      "command": "west flash --recover -d ${workspaceRoot}/peripheral_IO/build",
      "problemMatcher": [],
      "dependsOn": [
        "re-build"
      ]
    },
    {
      "label": "clean app",
      "type": "shell",
      "command": "west build -t clean -d ${workspaceRoot}/peripheral_IO/build",
      "problemMatcher": []
    },
    {
      "label": "pristine app",
      "type": "shell",
      "command": "west build -t pristine -d ${workspaceRoot}/peripheral_IO/build",
      "problemMatcher": []
    },
    {
      "label": "menuconfig",
      "type": "shell",
      "command": "west build -t menuconfig -d ${workspaceRoot}/peripheral_IO/build ${workspaceRoot}/peripheral_IO",
      "problemMatcher": []
    },
    {
      "label": "app ram_report",
      "type": "shell",
      "command": "west build -d ${workspaceRoot}/peripheral_IO/build ${workspaceRoot}/peripheral_IO --target ram_report > ${workspaceRoot}/peripheral_IO/build/ram_report",
      "problemMatcher": []
    },
    {
      "label": "PM report",
      "type": "shell",
      "command": "west build -t partition_manager_report -b bt610 -d ${workspaceRoot}/peripheral_IO/build",
      "problemMatcher": []
    },
    {
      "label": "app rom_report",
      "type": "shell",
      "command": "west build -d ${workspaceRoot}/peripheral_IO/build ${workspaceRoot}/peripheral_IO --target rom_report > ${workspaceRoot}/peripheral_IO/build/rom_report",
      "problemMatcher": []
    },
    {
      "label": "build hci uart",
      "type": "shell",
      "command": "west build -b bt610 -d ${workspaceRoot}/hci_uart/build ${workspaceRoot}/hci_uart",
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": "absolute"
      }
    }
  ]
}